<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path do |f| %>
	<% if @contact && @contact.errors.any? %> <!-- если переменная определена, что выводим сообщения об ошибке, если нет - то и не паримся -->
	<p>
		<ul>
		<% @contact.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</p>
	<% end %>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :message %><br>
		<%= f.text_area :message %>
	</p>
	<p>
		<%= f.submit 'Send message' %>
	</p>


<% end %>